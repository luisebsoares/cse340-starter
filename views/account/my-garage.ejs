<% if (title) { %>
    <h1><%= title %></h1>
  <% } else { %>
    <% res.redirect("/") %>
  <% } %>
  
  <% if (typeof messages === "function") { %>
    <section class="flash-messages">
      <%- messages() %>
    </section>
  <% } %>
  
  <section class="garage-wrapper">
    <% if (favorites && favorites.length > 0) { %>
      <p>These are the vehicles you have saved to your garage.</p>
  
      <ul class="garage-list">
        <% favorites.forEach(function(vehicle) { %>
          <li class="garage-item">
            <a href="/inv/detail/<%= vehicle.inv_id %>">
              <img
                src="<%= vehicle.inv_thumbnail %>"
                alt="Image of <%= vehicle.inv_make %> <%= vehicle.inv_model %>">
            </a>
  
            <div class="garage-info">
              <h2>
                <a href="/inv/detail/<%= vehicle.inv_id %>">
                  <%= vehicle.inv_year %> <%= vehicle.inv_make %> <%= vehicle.inv_model %>
                </a>
              </h2>
              <p class="garage-price">
                $<%= new Intl.NumberFormat("en-US").format(vehicle.inv_price) %>
              </p>
  
              <form action="/garage/remove" method="post" class="garage-remove-form">
                <input type="hidden" name="inv_id" value="<%= vehicle.inv_id %>">
                <button type="submit">Remove from My Garage</button>
              </form>
            </div>
          </li>
        <% }) %>
      </ul>
    <% } else { %>
      <p>You have not added any vehicles to your garage yet.</p>
      <p><a href="/inv/">Browse our inventory</a> to start building your garage.</p>
    <% } %>
  </section>
  