<h1><%= title %></h1>

<!-- Flash messages (if using express-messages) -->
<% if (typeof messages === "function") { %>
  <section class="flash-messages">
    <%- messages() %>
  </section>
<% } %>

<section class="account-form-wrapper">
  <form id="registerForm" action="/account/register" method="post" class="account-form">

    <div class="form-row">
      <label for="account_firstname">First name<span aria-hidden="true"> *</span></label>
      <input
        type="text"
        id="account_firstname"
        name="account_firstname"
        required
        value="<%= typeof account_firstname != 'undefined' ? account_firstname : '' %>"
      >
    </div>

    <div class="form-row">
      <label for="account_lastname">Last name<span aria-hidden="true"> *</span></label>
      <input
        type="text"
        id="account_lastname"
        name="account_lastname"
        required
        value="<%= typeof account_lastname != 'undefined' ? account_lastname : '' %>"
      >
    </div>

    <div class="form-row">
      <label for="account_email">Email address<span aria-hidden="true"> *</span></label>
      <input
        type="email"
        id="account_email"
        name="account_email"
        required
        value="<%= typeof account_email != 'undefined' ? account_email : '' %>"
      >
    </div>

    <div class="form-row">
      <label for="pword">Password<span aria-hidden="true"> *</span></label>
      <input type="password" id="pword" name="account_password" required>
    
      <p class="password-hint">
        Password must be at least 12 characters and include 1 capital letter,
        1 number, and 1 special character.
      </p>
    
      <div class="show-password-wrapper">
        <button type="button" id="pswdBtn" class="toggle-password-btn">
          Show Password
        </button>
      </div>
    </div>
    

    <div class="form-actions">
      <button type="submit" class="btn-primary">Register</button>
    </div>
  </form>
</section>

